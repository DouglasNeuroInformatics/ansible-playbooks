[Unit]
Description=Slurm controller daemon
After=network.target munge.service
Requires=munge.service

[Service]
Type=forking
EnvironmentFile=-/etc/default/slurm
ExecStart=/opt/slurm/current/sbin/slurmctld
#PIDFile=/run/slurm/slurmctld.pid
User=root
Group=root
LimitCORE=infinity
LimitNOFILE=65536
LimitMEMLOCK=infinity
Restart=on-failure
RestartSec=10
Environment="SLURM_CONF=/opt/slurm/etc/slurm.conf"

[Install]
WantedBy=multi-user.target

